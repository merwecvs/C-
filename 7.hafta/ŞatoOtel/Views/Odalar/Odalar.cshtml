@model List<Oda>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

<div class="container my-5">
    <h2 class="text-center mb-4">Odalarımız</h2>
    <div class="row">
        @foreach (var oda in Model)
        {
        <div class="col-md-6 mb-4" @oda.Id>
            <div class="card h-100 shadow">
                <img src="~/img/@oda.Image" class="card-img-top" alt="Deniz Manzaralı Deluxe Oda">
                <div class="card-body">
                    <h5 class="card-title">@oda.Title</h5>
                    <p class="card-text">@oda.Description</p>
                    <ul class="list-unstyled small">
                        <li><strong>Kapasite:</strong> @oda.Capacity</li>
                        <li><strong>Manzara:</strong> @oda.View</li>
                        <li><strong>Yatak Tipi:</strong> @oda.BedType</li>
                    </ul>
                    <a href="#" class="btn btn-warning mt-2">Detayları Gör</a>
                </div>
            </div>
        </div>
    }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>