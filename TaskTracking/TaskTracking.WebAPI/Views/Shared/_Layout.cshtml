<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Görev Takip Uygulaması</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Görev Takip</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Login">Giriş</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Register">Kayıt Ol</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="container">
        @RenderBody()
    </main>
    
    <footer class="bg-primary text-white mt-5">
        <div class="container py-4 text-center">
            <div class="mb-3">
                <a href="https://www.linkedin.com/" target="_blank" class="text-white me-3 fs-4">
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href="https://github.com/" target="_blank" class="text-white me-3 fs-4">
                    <i class="bi bi-github"></i>
                </a>
                <a href="mailto:info@ornekmail.com" class="text-white fs-4">
                    <i class="bi bi-envelope-fill"></i>
                </a>
            </div>
            <p class="mb-1">&copy; @DateTime.Now.Year Görev Takip Uygulaması</p>
        </div>
    </footer>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
